<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
    </style>

    <style name="JudulTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="SubJudulTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="LogoImageView">
        <item name="android:layout_width">@dimen/image_size_medium</item>
        <item name="android:layout_height">@dimen/image_size_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="TombolAksi" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">@dimen/button_width_large</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
    </style>
</resources>