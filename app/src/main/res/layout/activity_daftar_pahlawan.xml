<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DaftarPahlawanActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daftar"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pahlawan"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/jendral_soedirman"
                android:contentDescription="Foto Jenderal Soedirman" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Raden Soedirman lahir pada 24 Januari 1916 di Purbalingga, Provinsi Jawa Tengah."
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/detailSoedirmanButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tampilkan lebih detail"
                    android:backgroundTint="#3F51B5"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/moh_hatta"
                android:contentDescription="Foto Mohammad Hatta" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama lengkap Mohammad Hatta adalah Dr. (H.C.) Drs. H. Mohammad Hatta, namun ia lebih dikenal dengan panggilan Bung Hatta. Nama lahirnya adalah Mohammad Athar."
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/detailHattaButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tampilkan lebih detail"
                    android:backgroundTint="#3F51B5"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/patimura"
                android:contentDescription="Foto Pattimura" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pattimura lahir dengan nama Thomas Matulessy pada 8 Juni 1783 di Saparua, Maluku; nama Pattimura adalah nama samarannya."
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/detailPattimuraButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tampilkan lebih detail"
                    android:backgroundTint="#3F51B5"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/kembaliButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kembali"
            android:backgroundTint="@android:color/black"
            android:textColor="@android:color/white"
            android:layout_marginTop="32dp" />

    </LinearLayout>

</ScrollView>